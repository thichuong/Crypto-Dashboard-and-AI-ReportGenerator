# Environment file for production deployment
# Copy this to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your_secret_key_here
FLASK_ENV=production

# Database Configuration  
POSTGRES_PASSWORD=your_secure_postgres_password

# API Keys (Required)
GEMINI_API_KEY=your_gemini_api_key_here
COINGECKO_API_KEY=your_coingecko_api_key_here
TAAPI_SECRET=your_taapi_secret_here

# Auto Report Configuration
ENABLE_AUTO_REPORT_SCHEDULER=true
AUTO_REPORT_INTERVAL_HOURS=3
AUTO_UPDATE_SECRET_KEY=your_auto_update_secret_key

# Optional Configuration
MAX_REPORT_ATTEMPTS=3
USE_FALLBACK_ON_500=true
THINKING_BUDGET=32768

# Performance Tuning
WORKERS=2
TIMEOUT=120
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50
